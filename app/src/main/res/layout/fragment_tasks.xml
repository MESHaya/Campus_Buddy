<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo1"
            android:contentDescription="Logo"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp" />

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Go back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Tasks:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="#113F7D" />
        </LinearLayout>

        <!-- Description
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which tasks you want to display:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />
             -->

        <!-- Radio buttons
        <RadioGroup
            android:id="@+id/radioGroupTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/radioDueTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioDoneTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_marginStart="24dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioOverDueTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OverDue"
                android:layout_marginStart="24dp"
                android:textColor="#000000" />
        </RadioGroup>

         Task input -->
        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Title"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text" />

        <EditText
            android:id="@+id/etTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Description"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text" />

        <!-- Date picker -->
        <TextView
            android:id="@+id/tvTaskDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#113F7D"
            android:layout_marginTop="12dp" />

   <TextView
       android:id="@+id/tvTaskDate"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Tap to select a date"
       android:padding="12dp"
       android:background="@android:drawable/edit_text"
       android:textColor="#555"
       android:textSize="14sp"
       android:drawableEnd="@android:drawable/ic_menu_today"
       android:focusable="true"
       android:clickable="true"
       android:layout_marginBottom="8dp" />

   <!-- Save button -->
        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            app:backgroundTint="#113F7D"
            android:text="@string/save_task"
            android:layout_marginTop="12dp" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</FrameLayout>
