<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->

        <!-- Top bar -->

        <!-- Description
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which tasks you want to display:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />
             -->

        <!-- Radio buttons
        <RadioGroup
            android:id="@+id/radioGroupTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/radioDueTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioDoneTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_marginStart="24dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioOverDueTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OverDue"
                android:layout_marginStart="24dp"
                android:textColor="#000000" />
        </RadioGroup>

         Task input -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="New Tasks:"
            android:textColor="#113F7D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Task Title"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Description"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text" />

        <!-- Date picker -->
        <TextView
            android:id="@+id/tvTaskDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#113F7D"
            android:layout_marginTop="12dp" />

        <!-- Save button -->
        <TextView
            android:id="@+id/tvTaskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/edit_text"
            android:clickable="true"
            android:drawableEnd="@android:drawable/ic_menu_today"
            android:focusable="true"
            android:hint="Tap to select a date"
            android:padding="12dp"
            android:textColor="#555"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/save_task"
            android:textColor="#FFF"
            app:backgroundTint="#113F7D" />

        <!-- RecyclerView -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTasks"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="12dp" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:src="@android:drawable/ic_menu_revert" />

    </LinearLayout>
</FrameLayout>
